<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eee"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/button_assit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="开启辅助功能" />

        <Button
            android:id="@+id/button_start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="开始自动化测试" />

        <Button
            android:id="@+id/button_flaot_window"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="开启悬浮窗（显示日志时开启）" />

        <Button
            android:id="@+id/button_permission"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="获取读写权限（保存日志时开启）" />


        <Button
            android:id="@+id/button_order_get"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="获取订单信息" />

        <Button
            android:id="@+id/button_order_query"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="查询订单状态" />

        <Button
            android:id="@+id/button_order_complete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="订单完成" />

        <Button
            android:id="@+id/mButton_order_clear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="清空订单缓存" />

        <Button
            android:id="@+id/mButton_order_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="读取订单缓存数据" />
    </LinearLayout>


</LinearLayout>
